<h1>Bookmarks</h1>

<table class="table">
  <thead>
    <tr>
      <th>Url</th>
      <th>Shortened url</th>
      <th>Title</th>
      <th>Tags</th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= link_to bookmark.url, bookmark %></td>
        <td><%= bookmark.shortened_url %></td>
        <td><%= bookmark.title %></td>
        <td><%= bookmark.tag_list %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bookmark', new_bookmark_path, class: 'btn btn-primary' %>